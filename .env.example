# GavatCore Environment Configuration
# Copy this file to .env and fill in your values

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Telegram API Configuration (Required)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_SESSION_NAME=gavatcore

# Security Configuration (Required)
JWT_SECRET=your_very_long_and_secure_jwt_secret_at_least_32_characters_long
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
POSTGRESQL_URL=postgresql://user:password@localhost:5432/gavatcore
MONGODB_URL=mongodb://localhost:27017/gavatcore
REDIS_URL=redis://localhost:6379/0

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Performance Settings
MAX_CONCURRENT_OPERATIONS=10
MESSAGE_RATE_LIMIT=30
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_PATH=logs/security.log
